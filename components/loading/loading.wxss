/* components/loading/loading.wxss */

.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: opacity 0.3s ease;
}

.loading-container.show {
  opacity: 1;
}

.loading-container.hide {
  opacity: 0;
}

.loading-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.loading-content {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.8);
  border-radius: 12rpx;
  padding: 40rpx;
  min-width: 200rpx;
  min-height: 200rpx;
}

.loading-content.loading-small {
  min-width: 120rpx;
  min-height: 120rpx;
  padding: 20rpx;
}

.loading-content.loading-medium {
  min-width: 200rpx;
  min-height: 200rpx;
  padding: 40rpx;
}

.loading-content.loading-large {
  min-width: 280rpx;
  min-height: 280rpx;
  padding: 60rpx;
}

.loading-text {
  color: #ffffff;
  font-size: 28rpx;
  margin-top: 20rpx;
  text-align: center;
}

/* 旋转加载器 */
.loading-spinner {
  width: 60rpx;
  height: 60rpx;
}

.spinner-circle {
  width: 100%;
  height: 100%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #ffffff;
  border-radius: 50%;
  animation: spinner-rotate 1s linear infinite;
}

@keyframes spinner-rotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 点点加载器 */
.loading-dots {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #ffffff;
  animation: dot-bounce 1.4s ease-in-out infinite;
}

.dot1 {
  animation-delay: -0.32s;
}

.dot2 {
  animation-delay: -0.16s;
}

.dot3 {
  animation-delay: 0s;
}

@keyframes dot-bounce {
  0%,
  80%,
  100% {
    transform: scale(0);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 脉冲加载器 */
.loading-pulse {
  width: 60rpx;
  height: 60rpx;
  position: relative;
}

.pulse-circle {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #ffffff;
  animation: pulse-scale 1.5s ease-in-out infinite;
}

@keyframes pulse-scale {
  0% {
    transform: scale(0);
    opacity: 1;
  }
  100% {
    transform: scale(1);
    opacity: 0;
  }
}

/* 小尺寸适配 */
.loading-small .loading-spinner,
.loading-small .loading-pulse {
  width: 40rpx;
  height: 40rpx;
}

.loading-small .dot {
  width: 8rpx;
  height: 8rpx;
}

.loading-small .loading-text {
  font-size: 24rpx;
  margin-top: 10rpx;
}

/* 大尺寸适配 */
.loading-large .loading-spinner,
.loading-large .loading-pulse {
  width: 80rpx;
  height: 80rpx;
}

.loading-large .dot {
  width: 16rpx;
  height: 16rpx;
}

.loading-large .loading-text {
  font-size: 32rpx;
  margin-top: 30rpx;
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .loading-content {
    background-color: rgba(255, 255, 255, 0.1);
  }

  .loading-text {
    color: #ffffff;
  }

  .spinner-circle {
    border-color: rgba(255, 255, 255, 0.3);
    border-top-color: #ffffff;
  }

  .dot,
  .pulse-circle {
    background-color: #ffffff;
  }
}
