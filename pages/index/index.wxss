/* pages/index/index.wxss */

/* 轮播图样式 */
.banner-section {
  margin-bottom: 20rpx;
}

.banner-swiper {
  height: 300rpx;
  width: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
  border-radius: 0 0 20rpx 20rpx;
}

/* 快捷菜单样式 */
.quick-menu {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #ffffff;
  padding: 40rpx 20rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  padding: 20rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.menu-item:active {
  background-color: #f8f8f8;
  transform: scale(0.95);
}

.menu-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.menu-text {
  font-size: 24rpx;
  color: #666666;
  text-align: center;
  white-space: nowrap;
  word-break: keep-all;
}

/* 用户信息样式 */
.user-section {
  margin-bottom: 20rpx;
}

.user-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.user-desc {
  font-size: 24rpx;
  color: #666666;
}

.user-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.user-subtitle {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

.user-login-btn {
  background-color: var(--primary-color);
  color: #ffffff;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  width: fit-content;
}

/* 商家信息样式 */
.business-section {
  margin-bottom: 20rpx;
}

.business-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.business-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
}

.business-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.business-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.business-desc {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
}

/* 产品列表样式 */
.product-section {
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.section-more {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #666666;
}

.more-text {
  font-size: 24rpx;
}

.more-icon {
  font-size: 20rpx;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 0 20rpx;
}

.product-item {
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.product-item:active {
  transform: scale(0.95);
}

.product-image {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
}

.product-info {
  padding: 20rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-desc {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.product-price {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.price-symbol {
  font-size: 24rpx;
  color: #ff4444;
  font-weight: bold;
}

.price-value {
  font-size: 32rpx;
  color: #ff4444;
  font-weight: bold;
}

/* 联系信息样式 */
.contact-section {
  margin-bottom: 20rpx;
}

.contact-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.contact-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.contact-item:last-child {
  margin-bottom: 0;
}

.contact-label {
  font-size: 28rpx;
  color: #666666;
  width: 80rpx;
}

.contact-value {
  font-size: 28rpx;
  color: #333333;
  flex: 1;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  margin: 20rpx;
}

.empty-icon {
  font-size: 80rpx;
  opacity: 0.6;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 响应式适配 */
@media (max-width: 600rpx) {
  .product-grid {
    grid-template-columns: 1fr;
  }

  .quick-menu {
    flex-wrap: wrap;
    gap: 20rpx;
  }

  .menu-item {
    width: calc(50% - 10rpx);
  }
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .user-card,
  .business-card,
  .product-item,
  .contact-card,
  .empty-state {
    background-color: #1f1f1f;
    box-shadow: 0 4rpx 20rpx rgba(255, 255, 255, 0.1);
  }

  .user-name,
  .user-title,
  .business-name,
  .section-title,
  .product-name,
  .contact-title,
  .contact-value {
    color: #ffffff;
  }

  .user-desc,
  .user-subtitle,
  .business-desc,
  .product-desc,
  .contact-label,
  .menu-text,
  .more-text {
    color: #cccccc;
  }

  .empty-text {
    color: #888888;
  }
}
