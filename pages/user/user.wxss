/* pages/user/user.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 20rpx;
}

/* 用户信息区域 */
.user-info {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  position: relative;
}

.user-avatar {
  margin-right: 30rpx;
}

.avatar-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.avatar-text {
  font-size: 60rpx;
  color: rgba(255, 255, 255, 0.8);
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.login-prompt {
  margin-bottom: 10rpx;
}

.login-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  font-size: 28rpx;
}

.business-info {
  margin-top: 10rpx;
}

.business-name {
  font-size: 24rpx;
  opacity: 0.8;
}

.logout-btn {
  position: absolute;
  top: 40rpx;
  right: 30rpx;
}

.logout-button {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  font-size: 24rpx;
}

/* 统计信息 */
.stats-section {
  display: flex;
  background-color: white;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  padding: 30rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.stats-item {
  flex: 1;
  text-align: center;
  position: relative;
  transition: background-color 0.3s;
  padding: 10rpx;
  border-radius: 8rpx;
}

.stats-item:active {
  background-color: #f8f8f8;
}

.stats-item:not(:last-child)::after {
  content: "";
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 2rpx;
  height: 60rpx;
  background-color: #f0f0f0;
}

.stats-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

/* 订单区域 */
.order-section {
  background-color: white;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.more-btn {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}

.order-status {
  display: flex;
  padding: 30rpx;
}

.order-item {
  flex: 1;
  text-align: center;
  padding: 10rpx;
  border-radius: 8rpx;
  transition: background-color 0.3s;
}

.order-item:active {
  background-color: #f8f8f8;
}

.order-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.order-text {
  font-size: 24rpx;
  color: #666;
}

/* 功能菜单 */
.menu-section {
  background-color: white;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.menu-list {
  padding: 0 30rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
  transition: background-color 0.3s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f8f8f8;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 30rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 32rpx;
  color: #333;
}

.menu-arrow {
  font-size: 24rpx;
  color: #ccc;
}

/* 商家信息 */
.business-section {
  background-color: white;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.business-card {
  display: flex;
  align-items: flex-start;
  padding: 30rpx;
}

.business-logo {
  margin-right: 30rpx;
}

.logo-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
}

.logo-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background-color: #f8f9fa;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  color: #ccc;
}

.business-details {
  flex: 1;
}

.business-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.business-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.business-contact {
  font-size: 24rpx;
  color: #999;
}

.contact-item {
  margin-bottom: 8rpx;
}

.contact-label {
  color: #666;
}

.contact-value {
  color: #333;
}

/* 版本信息 */
.version-section {
  text-align: center;
  padding: 40rpx;
}

.version-text {
  font-size: 24rpx;
  color: #999;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .user-info {
    padding: 30rpx 20rpx;
  }

  .stats-section,
  .order-section,
  .menu-section,
  .business-section {
    margin: 15rpx 20rpx;
  }

  .user-name {
    font-size: 32rpx;
  }

  .stats-number {
    font-size: 32rpx;
  }
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #1a1a1a;
  }

  .stats-section,
  .order-section,
  .menu-section,
  .business-section {
    background-color: #2d2d2d;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  }

  .section-title {
    color: #ffffff;
    border-bottom-color: #404040;
  }

  .menu-item {
    border-bottom-color: #404040;
  }

  .menu-title {
    color: #ffffff;
  }

  .stats-number {
    color: #ffffff;
  }

  .stats-label {
    color: #cccccc;
  }

  .order-text {
    color: #cccccc;
  }

  .business-name {
    color: #ffffff;
  }

  .business-desc {
    color: #cccccc;
  }

  .contact-value {
    color: #ffffff;
  }
}
